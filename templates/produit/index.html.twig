{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idproduit</th>
                <th>Idrayon</th>
                <th>NomProduit</th>
                <th>PrixVente</th>
                <th>PrixAchat</th>
                <th>QuantiteStock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.idproduit }}</td>
                <td>{{ produit.idrayon }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.prixVente }}</td>
                <td>{{ produit.prixAchat }}</td>
                <td>{{ produit.QuantiteStock }}</td>
                <td>
                    <a href="{{ path('produit_show', {'idproduit': produit.idproduit}) }}">show</a>
                    <a href="{{ path('produit_edit', {'idproduit': produit.idproduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
